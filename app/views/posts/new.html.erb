<h1>New post</h1>

<%= form_for @post do |f| %>
<h1> Post Content: </h1>
<%= f.label :content, "Content" %>
<%= f.text_field :content%>

<h1> Post title </h1>
<%= f.label :name, "Name" %><br>
<%= f.text_field :name %>

<%= f.label :tag_ids, "Tags" %><br>
<%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>

<%= f.submit %>
<%end%>

